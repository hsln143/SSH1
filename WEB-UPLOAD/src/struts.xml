<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="IndexAction" extends="struts-default">
		<!-- 定义处理请求URL为login.action的Action -->
		<action name="*" class="com.webupload.action.IndexAction" method="{1}">
			<!-- 定义处理结果字符串和资源之间的映射关系 -->
			<result name="success">/jsp/index/LoginSuccess.jsp</result>
			<result name="error">/jsp/index/LoginError.jsp</result>
		</action>
	</package>
</struts>    
